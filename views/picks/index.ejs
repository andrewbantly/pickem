<%- include("../partials/header.ejs") %>
<%- include("../partials/nav-signup.ejs") %>
<ul>
    <% allUsersAndPicks.forEach(pick => { %>
        <li><%=pick.user.username%> is userId: <%=pick.userId%> selected <%=pick.selTeamName%> at pickId: <%=pick.id%></li>
        <form method="POST" action="/picks/like/<%=pick.id%>">
            <input hidden type="boolean" name="liked">
            <button type="submit">Like</button>
        </form> (<%=pick.likeCount%>👍) liked by: 
        <% pick.likes.forEach(like => { %><%=like.likerName%> <% }) %>
        <% pick.comments.forEach(comment => { %>
            <li>
                <%=comment.commenterName%>: <%=comment.content%> 
            </li>
                <% }) %>
        <form method="POST" action="/picks/comment/<%=pick.id%>">
            <textarea name="content"></textarea>
            <button type="submit">Comment</button>
        </form>


    <% }) %>
</ul>

<%- include("../partials/footer.ejs") %>